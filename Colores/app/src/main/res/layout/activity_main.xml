<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-104dp"
        tools:layout_editor_absoluteY="220dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack" />

        <RadioGroup
            android:id="@+id/group1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/yellowT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto Amarillo" />

            <RadioButton
                android:id="@+id/blueT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto Azul" />

            <RadioButton
                android:id="@+id/whiteT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto Blanco" />

        </RadioGroup>

        <View
            android:id="@+id/view0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack" />

        <RadioGroup
            android:id="@+id/group2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/redB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fondo Rojo" />

            <RadioButton
                android:id="@+id/greenB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fondo Verde" />

            <RadioButton
                android:id="@+id/blackB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fondo Negro" />
        </RadioGroup>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Texto" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>